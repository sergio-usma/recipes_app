<section class="text-center p-3">
  <h2 class="p-3 fw-bold"><%= @recipe.name %></h2>
  <div class="container text-start ps-4">
    <div class="row ps-4">
      <div class="col d-flex flex-column row-gap-3">
        <span>Preparation time: <%= @recipe.preparation_time %> hours</span>
        <span>Cooking time: <%= @recipe.cooking_time %></span>
      </div>

      <div class="col d-flex justify-content-end pe-5">
        <div class="custom-control custom-switch">
          <input type="checkbox" class="custom-control-input" id="recipe_publicity" data-recipe-id="<%= @recipe.id %>" <%= @recipe.public? ? "checked" : "" %> />
          <label class="custom-control-label" for="recipe_publicity">Public</label>
        </div>
      </div>

    </div>
    <div class="row p-4">
      <div class="col">
        <%= @recipe.description %>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-around p-3">
    <%= details_buttons(@recipe) %>
  </div>
  <div class="container border-top p-3">
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Value</th>
          <th>Actions</th>
        </tr>
        <%= render partial: 'table_rows', collection: foods(@recipe), as: :foods %>
      </tbody>
    </table>
  </div>
</section>
