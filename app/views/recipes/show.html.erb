<section class="text-center p-3">
  <h2 class="p-3 fw-bold"><%= @recipe.name %></h2>
  <div class="container text-start ps-4">
    <div class="row ps-4">
      <div class="col d-flex flex-column row-gap-3">
        <span>Preparation time: <%= @recipe.preparation_time %> hours</span>
        <span>Cooking time: <%= @recipe.cooking_time %></span>
      </div>
    </div>
    <div class="row p-4">
      <div class="col">
        <%= @recipe.description %>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-around p-3">
    <%#= link_to 'Generate shopping list', general_shopping_lists_url, class: 'buttons btn btn-primary auto-width' %>
    <%= link_to 'Add ingredient', new_recipe_food_path(@recipe), class: 'buttons btn btn-primary auto-width' %>
  </div>
  <div class="container border-top p-3">
    <table class="table table-striped table-bordered">
      <tbody>

      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
      <%= render partial: 'recipes_table', locals: { food: @foods, recipe_foods: @recipe_foods} %>

      </tbody>
    </table>
  </div>
</section>
